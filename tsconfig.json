{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "strict": true,
    "types": ["@types/node"],
    "typeRoots": ["node_modules"],
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "declaration": true,
    "module": "commonjs"
  },
  "include": ["src"]
}
